/dts-v1/;
#include "exynos4412.dtsi"
#include <dt-bindings/sound/samsung-i2s.h>
#include <dt-bindings/input/input.h>

/ {
	model = "FriendlyARM Nanopc-T1 board based on Exynos4412";
	compatible = "friendlyarm,nanopct1", "samsung,exynos4412", "samsung,exynos4";

	chosen {
		stdout-path = &serial_0;
	};

	memory {
		reg = <0x40000000 0x3FF00000>;
	};
	
    reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		mfc_left: region@51000000 {
			compatible = "shared-dma-pool";
			no-map;
			reg = <0x51000000 0x800000>;
		};

		mfc_right: region@43000000 {
			compatible = "shared-dma-pool";
			no-map;
			reg = <0x43000000 0x800000>;
		};
	};

	firmware@0204F000 {
		compatible = "samsung,secure-firmware";
		reg = <0x0204F000 0x1000>;
	};

	leds {
		compatible = "gpio-leds";

		led1 {
			label = "led1";
			gpios = <&gpm4 0 1>;
			default-state = "off";
			linux,default-trigger = "heartbeat";
		};

		led2 {
			label = "led2";
			gpios = <&gpm4 1 1>;
			default-state = "off";
            linux,default-trigger = "mmc0";
		};
	};

    regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_sysvdd: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0x0>;
			regulator-name = "sysvdd";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			regulator-always-on;
			regulator-boot-on;
		};

		reg_p3v3: regulator@1 {
			compatible = "regulator-fixed";
			reg = <0x1>;
			regulator-name = "p3v3";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
        };

        reg_usb10: usb10@2 {
			compatible = "regulator-fixed";
			reg = <0x2>;
			regulator-name = "vdd_otg_hsic_1.0V";
			regulator-min-microvolt = <1000000>;
			regulator-max-microvolt = <1000000>;
			regulator-always-on;
			regulator-boot-on;
		};

		reg_usb33: usb33@3 {
			compatible = "regulator-fixed";
			reg = <0x3>;
			regulator-name = "vdd_usb_otg_3.3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
        };

        reg_tmuvdd: tmuvdd@4 {
			compatible = "regulator-fixed";
			reg = <0x4>;
			regulator-name = "vddq_tmu_1.8V";
			regulator-min-microvolt = <1800000>;
			regulator-max-microvolt = <1800000>;
			enable-active-high;
			regulator-always-on;
			regulator-boot-on;
        };
	};

	watchdog@10060000 {
		status = "okay";
	};

	rtc@10070000 {
		status = "okay";
	};

	sdhci@12530000 {
		bus-width = <4>;
		pinctrl-0 = <&sd2_clk &sd2_cmd &sd2_cd &sd2_bus4>;
		/* cd-gpios = <&gpk2 2 0>; Check schematic*/
		pinctrl-names = "default";
		status = "okay";
	};

	serial@13800000 {
		status = "okay";
	};

	serial@13810000 {
		status = "okay";
	};

	serial@13820000 {
		status = "okay";
	};

	serial@13830000 {
		status = "okay";
	};

    exynos-usbphy@125B0000 {
		status = "okay";
        phy-supply = <&reg_sysvdd>;
	};
	
    hsotg@12480000 {
		dr_mode = "peripheral";
		status = "okay";
		vusb_d-supply = <&reg_usb10>;
		vusb_a-supply = <&reg_usb33>;
	};

	emmc_pwrseq: pwrseq {
		pinctrl-0 = <&sd1_cd>;
		pinctrl-names = "default";
		compatible = "mmc-pwrseq-emmc";
		reset-gpios = <&gpm3 0 1>;
	};

	emmc: mmc@12550000 {
		pinctrl-0 = <&sd4_clk &sd4_cmd &sd4_bus4 &sd4_bus8>;
		pinctrl-names = "default";
		mmc-pwrseq = <&emmc_pwrseq>;
		status = "okay";

		num-slots = <1>;
		broken-cd;
		card-detect-delay = <200>;
		samsung,dw-mshc-ciu-div = <3>;
		samsung,dw-mshc-sdr-timing = <2 3>;
		samsung,dw-mshc-ddr-timing = <1 2>;
		bus-width = <8>;
		cap-mmc-highspeed;
	};

	ehci: ehci@12580000 {
		status = "okay";
	};

	tmu@100C0000 {
		status = "okay";
        vtmu-supply = <&reg_tmuvdd>;
	};

	thermal-zones {
		cpu_thermal: cpu-thermal {
			cooling-maps {
				map0 {
				     /* Corresponds to 800MHz at freq_table */
				     cooling-device = <&cpu0 7 7>;
				};
				map1 {
				     /* Corresponds to 200MHz at freq_table */
				     cooling-device = <&cpu0 13 13>;
			       };
		       };
		};
	};
    
    g2d@10800000 {
		status = "okay";
	};
    
    camera {
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <>;

		fimc_0: fimc@11800000 {
			status = "okay";
			assigned-clocks = <&clock CLK_MOUT_FIMC0>,
					<&clock CLK_SCLK_FIMC0>;
			assigned-clock-parents = <&clock CLK_MOUT_MPLL_USER_T>;
			assigned-clock-rates = <0>, <176000000>;
		};

		fimc_1: fimc@11810000 {
			status = "okay";
			assigned-clocks = <&clock CLK_MOUT_FIMC1>,
					<&clock CLK_SCLK_FIMC1>;
			assigned-clock-parents = <&clock CLK_MOUT_MPLL_USER_T>;
			assigned-clock-rates = <0>, <176000000>;
		};

		fimc_2: fimc@11820000 {
			status = "okay";
			assigned-clocks = <&clock CLK_MOUT_FIMC2>,
					<&clock CLK_SCLK_FIMC2>;
			assigned-clock-parents = <&clock CLK_MOUT_MPLL_USER_T>;
			assigned-clock-rates = <0>, <176000000>;
		};

		fimc_3: fimc@11830000 {
			status = "okay";
			assigned-clocks = <&clock CLK_MOUT_FIMC3>,
					<&clock CLK_SCLK_FIMC3>;
			assigned-clock-parents = <&clock CLK_MOUT_MPLL_USER_T>;
			assigned-clock-rates = <0>, <176000000>;
		};
	};

    mixer: mixer@12C10000 {
		status = "okay";
	};
    
    fimd@11c00000 {
		status = "okay";
    };

    codec@13400000 {
		status = "okay";
		memory-region = <&mfc_left>, <&mfc_right>;
		memory-region-names = "left", "right";
	};

	hdmi@12D00000 {
		hpd-gpio = <&gpx3 7 0>;
		pinctrl-names = "default";
		pinctrl-0 = <&hdmi_hpd>;
		vdd-supply = <&reg_sysvdd>;
		vdd_osc-supply = <&reg_sysvdd>;
		vdd_pll-supply = <&reg_sysvdd>;
        hdmi-en-supply = <&reg_sysvdd>;
		ddc = <&hdmi_ddc>;
		status = "okay";
	};
    
    cec@100B0000 {
		status = "okay";
	};

	hdmi_ddc: i2c@138D0000 {
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&i2c7_bus>;
	};

	i2c@138E0000 {
		status = "okay";
	};
    
	hdmi_cec: hdmi-cec {
		samsung,pins = "gpx3-6";
		samsung,pin-function = <3>;
		samsung,pin-pud = <0>;
		samsung,pin-drv = <0>;
	};
    
	fixed-rate-clocks {
		xxti {
			compatible = "samsung,clock-xxti";
			clock-frequency = <0>;
		};

		xusbxti {
			compatible = "samsung,clock-xusbxti";
			clock-frequency = <24000000>;
		};
	};
};

&ehci {
	port@1 {
		status = "okay";
	};
};

&sd1_cd {
	samsung,pin-pud = <0>;
	samsung,pin-drv = <0>;
};

&pinctrl_1 {
	hdmi_hpd: hdmi-hpd {
		samsung,pins = "gpx3-7";
		samsung,pin-pud = <1>;
	};
};
